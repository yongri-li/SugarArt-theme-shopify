{% if paginate.previous or paginate.next %}
<ul class="pagination">

  <li class="arrow left{% unless paginate.previous %} unavailable{% endunless %}">
    <a {% if paginate.previous %}href="{{ paginate.previous.url }}"{% endif %}>
      {% include 'snippet-symbol' with 'arrow-left' %}
      {{ 'general.pagination.previous' | t }}
    </a>
  </li>

  {% for part in paginate.parts %}
    {% if part.is_link %}
      <li class="font--accent paginate--number"><a href="{{ part.url }}">{{ part.title }}</a></li>
    {% else %}
      {% if part.title == '&hellip;' %}
        <li class="font--accent paginate--number unavailable"><a href="">&hellip;</a></li>
      {% else %}
        <li class="font--accent paginate--number current"><a href="">{{ part.title }}</a></li>
      {% endif %}
    {% endif %}
  {% endfor %}

  <li class="arrow right{% unless paginate.next %} unavailable{% endunless %}">
    <a {% if paginate.next %}href="{{ paginate.next.url }}"{% endif %}>
      {{ 'general.pagination.next' | t }}
      {% include 'snippet-symbol' with 'arrow-right' %}
    </a>
  </li>

</ul>
{% endif %}