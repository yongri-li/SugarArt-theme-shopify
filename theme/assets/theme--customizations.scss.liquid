@mixin mobile {
  @media only screen and (max-width: 767px) { @content; }
}

@mixin desktop {
  @media only screen and (min-width: 768px) { @content; }
}

.payment-icons--list {
  display: flex;
  flex-wrap: wrap;
  max-width: 310px;
}

